<form {{action 'submit' login password on='submit'}} class="form-signin col-md-4 col-md-offset-4">
  <h2 class="form-signin-heading">Please sign in</h2>
  <label for="login" class="sr-only">text address</label>
  {{input id="login" type="text" class="form-control" placeholder="Login" required='required' autofocus='autofocus' value=login}}
  <label for="password" class="sr-only">Password</label>
  {{input id="password" type="password" class="form-control" placeholder="Password" required='required' value=password}}
  <div class="checkbox">
    <label>
      <input type="checkbox" value="remember-me"> Remember me
    </label>
  </div>

  {{#if errorMessage}}
    <div class="alert alert-danger">{{errorMessage}}</div>
  {{/if}}
  <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
</form>
